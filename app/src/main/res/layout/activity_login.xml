<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/logo22"
    tools:context=".LogIn">

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/logoo"
        android:layout_width="187dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:id="@+id/emaillText"
        android:layout_below="@+id/logoo"

        android:layout_margin="30dp"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:boxCornerRadiusTopStart="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        android:textColor="#000"
        >
        <EditText
            android:id="@+id/email"
            android:textColor="#000"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#65FFFFFF"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <!--        app:passwordToggleEnabled="true"-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your passwoerd"
        android:layout_below="@+id/emaillText"
        android:textColor="#000"
        app:endIconMode="password_toggle"
        android:id="@+id/paswordText"
        android:layout_margin="30dp"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
        app:boxCornerRadiusTopStart="30dp"
        app:boxCornerRadiusBottomEnd="30dp"
        >

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:inputType="textPassword"
            android:backgroundTint="#65FFFFFF"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paswordText"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4dd0e1 "
        app:cornerRadius="56dp"
        android:text="Sign IN"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="9dp"
        android:backgroundTint="#4dd0e1 "
        app:cornerRadius="56dp"
        android:text="Guest"
        android:textStyle="bold"
        android:textColor="@color/white" />

</RelativeLayout>

</ScrollView>